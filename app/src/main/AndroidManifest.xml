<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.pricingstrategies">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Parent Activity -->
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Children activities -->
        <activity android:name=".strategy01"
            android:label="@string/second_market_discounting"/>
        <activity android:name=".strategy02"
            android:label="@string/periodic_discounts"/>
        <activity android:name=".strategy03"
            android:label="@string/random_discounts"/>
        <activity android:name=".strategy04"
            android:label="@string/penetration_pricing"/>
        <activity android:name=".strategy05"
            android:label="@string/experience_curve_pricing"/>
        <activity android:name=".strategy06"
            android:label="@string/price_signaling"/>
        <activity android:name=".strategy07"
            android:label="@string/geographic_pricing"/>
        <activity android:name=".strategy08"
            android:label="@string/price_bundling"/>
        <activity android:name=".strategy09"
            android:label="@string/premium_pricing"/>
        <activity android:name=".strategy10"
            android:label="@string/image_pricing"/>
        <activity android:name=".strategy11"
            android:label="@string/reference_pricing"/>
        <activity android:name=".strategy12"
            android:label="@string/complementary_pricing" />
    </application>

</manifest>