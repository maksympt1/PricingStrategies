    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.pricingstrategies.strategy01">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/StrategyDescription"
            android:text="@string/description_second_market_discounting" />

        <ImageView
